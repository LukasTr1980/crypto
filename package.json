{
    "name": "crypto-monorepo",
    "private": true,
    "version": "1.5.11",
    "type": "module",
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "npm run dev -w server",
        "dev:server": "npm run dev:server -w server",
        "dev:client": "npm run dev -w client",
        "test": "echo \"no tests yet\"",
        "rel:patch": "npm version patch --workspaces --include-workspace-root --no-git-tag-version",
        "rel:minor": "npm version minor --workspaces --include-workspace-root --no-git-tag-version",
        "rel:major": "npm version major --workspaces --include-workspace-root --no-git-tag-version"
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "eslint": "^9.32.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "typescript-eslint": "^8.38.0"
    }
}
