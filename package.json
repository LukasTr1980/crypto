{
    "name": "crypto-monorepo",
    "private": true,
    "version": "1.4.5",
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "npm run dev -w server",
        "dev:server": "npm run dev:server -w server",
        "dev:client": "npm run dev -w client",
        "rel:patch": "npm version patch --workspaces --include-workspace-root",
        "rel:minor": "npm version minor --workspaces --include-workspace-root",
        "rel:major": "npm version major --workspaces --include-workspace-root"
    }
}
